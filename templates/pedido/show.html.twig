{% extends 'base.html.twig' %}

{% block title %}Pedido{% endblock %}

{% block body %}
    <h1>Pedido</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ pedido.id }}</td>
            </tr>
            <tr>
                <th>Productos</th>
                <td>{% for producto in pedido.productos %} 
                    <div>Nombre: {{ producto.nombre }} </div>
                    <div>precio: {{ producto.precio}} </div>
                
                {% endfor %}</td>
            </tr>
            <tr>
                <th>Cantidad</th>
                <td>{{ pedido.cantidad }}</td>
            </tr>
            <tr>
                <th>FechaSolicitud</th>
                <td>{{ pedido.fechaSolicitud ? pedido.fechaSolicitud|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('pedido_index') }}">back to list</a>
    <a href="{{ path('pedido_edit', {'id': pedido.id}) }}">edit</a>

    {% if is_granted('ROLE_ADMIN') %}
    {{ include('pedido/_delete_form.html.twig') }}
    {% endif %}
{% endblock %}
