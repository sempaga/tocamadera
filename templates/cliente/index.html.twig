{% extends 'base.html.twig' %}

{% block title %}
{% if is_granted('ROLE_CLIENTE') %}
MI PERFIL          
{% elseif is_granted('ROLE_ADMIN') %}
LISTADO CLIENTES                  
{% endif %}
{% endblock %}

{% block body %}
    {% if is_granted('ROLE_CLIENTE') %}
<h1>MI PERFIL</h1>        
{% elseif is_granted('ROLE_ADMIN') %}
<h1>LISTADO CLIENTES</h1>                
{% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Telefono</th>
                <th>Ciudad</th>
                <th>Calle</th>
                <th>Cp</th>
                <th>Npiso</th>
                <th>Email</th>
                <th>Tarjetas</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
        {% for cliente in clientes %}
            <tr>
                <td>{{ cliente.id }}</td>
                <td>{{ cliente.nombre }}</td>
                <td>{{ cliente.apellido }}</td>
                <td>{{ cliente.telefono }}</td>
                <td>{{ cliente.ciudad }}</td>
                <td>{{ cliente.calle }}</td>
                <td>{{ cliente.cp }}</td>
                <td>{{ cliente.npiso }}</td>
                <td>{{ cliente.email }}</td>
                <td>{% for modoPago in cliente.modoPago %}
                    {{modoPago}}
                {% endfor %}
                {% if is_granted ('ROLE_CLIENTE') %}
                    <a href="{{ path('modo_pago_new')}}">AÃ±adir tarjeta</a>
                    <a href="{{ path('modo_pago_index')}}">Ver tarjetas</a>
                    {% endif %}
                </td>
                <td>
                    <a href="{{ path('cliente_show', {'id': cliente.id}) }}">Ver</a>
                    <a href="{{ path('cliente_edit', {'id': cliente.id}) }}">Editar</a>
                    
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Sin resultados</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('cliente_new') }}">Crear nuevo</a>
{% endblock %}
